    private void jButtonNewActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
//         membersihkan text field yg misal sudah di isi
        jTextFieldNama.setText("");
        jFormattedTextFieldTanggal.setText("");
        jComboBoxJalur.setSelectedIndex(0);
        jComboBoxKelamin.setSelectedIndex(0);
        jTextAreaAlamat.setText("");
        jTextFieldEmail.setText("");
        
        //agar kursor lgsg berada di textField Nama
        jTextFieldNama.requestFocus();

        StringBuilder allStudents = new StringBuilder();
        for (Student s : StudentQueue) {
            allStudents.append(s.toString());
        }
        jTextArea1.setText(allStudents.toString());
        
    }                                          

    private void jButtonSaveActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        // memasukkan data mahsiswa 
        String nama = jTextFieldNama.getText();
        String tanggal = jFormattedTextFieldTanggal.getText();
        String jalur = (String) jComboBoxJalur.getSelectedItem();
        String gender = (String) jComboBoxKelamin.getSelectedItem();
        String alamat = jTextAreaAlamat.getText();
        String email = jTextFieldEmail.getText();
        
        //menginisiasi Student afar dapat menyimpan data pada kelas student
        Student mahasiswa = new Student(nama, tanggal, jalur, gender, alamat, email);
        StudentQueue.add(mahasiswa);
        JOptionPane.showMessageDialog(this, "Data saved successfully!");
        updateTextArea();
    }                                           
    
     private void updateTextArea(){
        StringBuilder allStudents = new StringBuilder();
        for (Student s : StudentQueue) {
            allStudents.append(s.toString()).append("\n");
        }
        jTextArea1.setText("DATA SELURUH MAHASISWA");
        jTextArea1.setText(allStudents.toString());
    }
    private void jButtonEditActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        String nama = jTextFieldNama.getText();
        for (Student mhs : StudentQueue) {
            if (mhs.getNama().equals(nama)) {
                mhs.setTanggal(jFormattedTextFieldTanggal.getText());
                mhs.setJalur((String) jComboBoxJalur.getSelectedItem());
                mhs.setGender((String) jComboBoxKelamin.getSelectedItem());
                mhs.setAlamat(jTextAreaAlamat.getText());
                mhs.setEmail(jTextFieldEmail.getText());
                JOptionPane.showMessageDialog(this, "Data updated successfully!");
                return;
            }
        }
        JOptionPane.showMessageDialog(this, "Data not found!");
    }                                           

    private void jButtonHapusActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        String nama = jTextFieldNama.getText();
        for (Student mhs : StudentQueue) {
            if (mhs.getNama().equals(nama)) {
                StudentQueue.remove(mhs);
                JOptionPane.showMessageDialog(this, "Data deleted successfully!");
                return;
            }
        }
        JOptionPane.showMessageDialog(this, "Data not found!");
    }                                            

    private void jButtonKeluarActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        this.dispose();
    }                                             

    private void jButtonCariActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        String nama = jTextFieldCari.getText();
        for (Student mhs : StudentQueue) {
            if (mhs.getNama().equals(nama)) {
                jTextFieldNama.setText(mhs.getNama());
                jFormattedTextFieldTanggal.setText(mhs.getTanggal());
                jComboBoxJalur.setSelectedItem(mhs.getJalur());
                jComboBoxKelamin.setSelectedItem(mhs.getGender());
                jTextAreaAlamat.setText(mhs.getAlamat());
                jTextFieldEmail.setText(mhs.getEmail());
                return;
            }
        }
        JOptionPane.showMessageDialog(this, "Data not found!");
    }                                           

